<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ViewCatagoryServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewCatagoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCatagoryServlet</servlet-name>
        <url-pattern>/viewCategory</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewProductServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewProductServlet</servlet-name>
        <url-pattern>/viewProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewItemServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewItemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewItemServlet</servlet-name>
        <url-pattern>/viewItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.SearchProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchProductServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.AddItemToCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/addItemToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCartServlet</servlet-name>
        <url-pattern>/viewCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.RemoveItemFromCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <url-pattern>/removeItemFromCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountLogInServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.AccountLogInServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountLogInServlet</servlet-name>
        <url-pattern>/logIn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountRegisterServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.AccountRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountRegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountSignOutServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.AccountSignOutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountSignOutServlet</servlet-name>
        <url-pattern>/signOut</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateUserInfoServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.UpdateUserInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateUserInfoServlet</servlet-name>
        <url-pattern>/updateUserInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewAccountServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewAccountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewAccountServlet</servlet-name>
        <url-pattern>/viewAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UsernameIsExistServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.UsernameIsExistServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsernameIsExistServlet</servlet-name>
        <url-pattern>/usernameIsExist</url-pattern>
    </servlet-mapping>
</web-app>