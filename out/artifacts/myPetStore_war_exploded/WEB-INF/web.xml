<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ViewCatagoryServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewCatagoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCatagoryServlet</servlet-name>
        <url-pattern>/viewCategory</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewProductServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewProductServlet</servlet-name>
        <url-pattern>/viewProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewItemServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewItemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewItemServlet</servlet-name>
        <url-pattern>/viewItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.SearchProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchProductServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.AddItemToCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/addItemToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.ViewCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCartServlet</servlet-name>
        <url-pattern>/viewCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <servlet-class>org.mypetstore.web.servlets.RemoveItemFromCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoveItemFromCartServlet</servlet-name>
        <url-pattern>/removeItemFromCart</url-pattern>
    </servlet-mapping>

</web-app>